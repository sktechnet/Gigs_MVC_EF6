@model GigHub.ViewModels.GigViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

<form>
    <div class="form-group">
        @Html.LabelFor(m=> m.Name)
        @Html.TextBoxFor(m=>m.Name, new {@class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Date)
        @Html.TextBoxFor(m => m.Date, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Time)
        @Html.TextBoxFor(m => m.Time, new { @class = "form-control" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m=>m.Genre)
        @Html.DropDownListFor(m=>m.Genre,new SelectList(Model.Genres, "Id","Name"), "Select Genre", new {@class = "form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>